<!doctype html>
<html lang="{{site.language_attributes}}">
    <head>
        <title>
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
        <meta charset="{{site.charset}}" />
        <meta name="description" content="{{site.description}}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {{function('wp_head')}}
    </head>
    <body>

    <header>
        <h1>
            <a href="/" rel="home">{{site.name}}</a>
        </h1>
    </header>

    <section id="content" role="main">
        {% if title %}
        <h1>{{title}}</h1>
        {% endif %}
        <div>
            {% block content %}
            Sorry, no content
            {% endblock %}
        </div>
    </section>


    <footer>

    </footer>
    {{ function('wp_footer') }}

    </body>
</html>



