<!doctype html>
<html lang="{{site.language_attributes}}">
    <head>
        <title>
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
        <meta charset="{{site.charset}}" />
        <meta name="description" content="{{site.description}}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {{function('wp_head')}}
    </head>
    <body>

    <header class="header">
        <div class="container">

            <nav class="main-nav">
                <a href="/about">About</a>
                <a href="/">All Trips</a>
            </nav>

            <h1 class="header__logo">
                <a href="/">
                    {{site.name}}
                </a>
            </h1>
        </div>
    </header>

    <main id="content" role="main">
        {% if title %}
        <h1>{{title}}</h1>
        {% endif %}
        <section>
            {% block content %}
            <p>Sorry, no content</p>
            {% endblock %}
        </section>
    </main>


    <footer class="footer">
        <section class="footer__legal">
            <div class="container">
                <p class="footer__logo">
                    <a href="/">{{ site.name }}</a>
                </p>
                <p class="main-nav">
                    <a href="/">Home</a>
                    <a href="/about">About</a>
                    <a href="/">Trips</a>
                </p>
                <p>Copyright &copy; {{ "now" | date("Y") }}.</p>
            </div>
        </section>
    </footer>


    {{ function('wp_footer') }}

    </body>
</html>



