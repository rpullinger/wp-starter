            "name": "Richard Pullinger",
            "email": "richard@velocitypartners.co.uk"
        }
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        }
    ],
    "config" : {
         "vendor-dir": "www/vendor"
    },
    "require": {
        "johnpbloch/wordpress": "dev-master",
        "composer/installers": "~1.0.12",
        "wpackagist-plugin/advanced-custom-fields": "dev-trunk",
        "wp-sync-db/wp-sync-db": "dev-master",
        "wpackagist-plugin/force-regenerate-thumbnails": "2.0.3",
	    "wpackagist-plugin/timber-library": "dev-trunk",
        "wpackagist-plugin/wordpress-seo": "2.0"
    },
    "extra": {
        "installer-paths": {
            "www/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        },
        "wordpress-install-dir": "www/wp"
    }
}
